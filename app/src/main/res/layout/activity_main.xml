<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:textColor="#f12"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bill"/>

    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="100.00"
        android:inputType="numberDecimal"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#f12"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip%" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_Tib_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="-"
            android:textSize="32sp"
            />
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="0%" />
        <Button
            android:id="@+id/b_tib_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="+"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_weight="1"
            android:textSize="32sp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:textColor="#f12"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="people" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/b_people_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="-"
            android:textSize="32sp"
            />
        <TextView
            android:id="@+id/tv_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"


            android:text="1%" />
        <Button
            android:id="@+id/b_people_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:textSize="32sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/b_calculate"
        android:textColor="@color/black"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"

        android:text="Calculate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="#f12"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip" />
    <TextView
        android:id="@+id/tv_tip_output"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="press calculate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textColor="#f12"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total" />
    <TextView
        android:id="@+id/tv_total_output"
        android:layout_marginTop="20dp"

        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="press calculate" />


</LinearLayout>